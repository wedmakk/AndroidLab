<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zao.myapplication.ActivityChatList">

    <ListView
        android:id="@+id/listChats"
        android:layout_width="346dp"
        android:layout_height="401dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listChats"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/listChats"
        android:layout_marginBottom="39dp"
        android:width="250dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etMessage"
        android:layout_alignBottom="@+id/etMessage"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:onClick="SendMessageButton_OnClick"
        android:layout_toEndOf="@+id/etMessage"
        android:layout_toRightOf="@+id/etMessage" />


</RelativeLayout>
